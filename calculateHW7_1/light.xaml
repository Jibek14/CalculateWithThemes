<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:calculateHW7_1">
    <LinearGradientBrush x:Key="buttonBrush">
        <GradientStopCollection>
            <GradientStop Color="LightCoral" Offset="0"/>
            <GradientStop Color="DeepSkyBlue" Offset="1"/>
        </GradientStopCollection>
    </LinearGradientBrush>
    <Style x:Key="WindowStyle" TargetType="Window">
        <Setter Property="Background" Value="{DynamicResource buttonBrush}"/>
    </Style>
    <Style TargetType="Button">
        <Setter Property="Control.Foreground" Value="Firebrick"/>
        <Setter Property="Height" Value="60"/>
        <Setter Property="Width" Value="89"/>
        <Setter Property="Control.Background" Value="NavajoWhite"/>
        <Setter Property="Control.FontSize" Value="20"/>
        <Setter Property="Control.FontWeight" Value="Bold"/>
        <Setter Property="Control.BorderBrush" Value="LightSeaGreen"/>
    </Style>
</ResourceDictionary>