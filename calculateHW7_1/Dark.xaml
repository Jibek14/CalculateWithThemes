<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:calculateHW7_1">
    <Style x:Key="TextBlockStyle" TargetType="TextBlock">
        <Setter Property="Background" Value="DarkGray"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    <LinearGradientBrush x:Key="buttonBrush">
        <GradientStopCollection>
            <GradientStop Color="DarkMagenta" Offset="0"/>
            <GradientStop Color="DarkGoldenrod" Offset="1"/>
        </GradientStopCollection>
    </LinearGradientBrush>
    <Style x:Key="WindowStyle" TargetType="Window">
        <Setter Property="Background" Value="{DynamicResource buttonBrush}"/>
    </Style>
    <Style TargetType="Button">
        <Setter Property="Control.Foreground" Value="White"/>
        <Setter Property="Height" Value="60"/>
        <Setter Property="Width" Value="89"/>
        <Setter Property="Control.Background" Value="Black"/>
        <Setter Property="Control.FontSize" Value="20"/>
        <Setter Property="Control.FontWeight" Value="Bold"/>
        <Setter Property="Control.BorderBrush" Value="Pink"/>
    </Style>
</ResourceDictionary>